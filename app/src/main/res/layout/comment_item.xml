    <TextView
        android:id="@+id/id_tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/id_tv_name"
        android:text="战狼" />
</RelativeLayout>